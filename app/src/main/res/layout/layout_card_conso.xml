<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:id="@+id/card_poste_consommation"
android:layout_margin="5dp"
android:layout_width="match_parent"
android:layout_height="wrap_content"
card_view:cardCornerRadius="4dp"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_conso_title"
            android:layout_marginTop="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/conso_title"
            android:textSize="33sp"
            android:textColor="#125f9b"
            android:textAlignment="viewStart" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/tv_jours_conso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/conso_jour"
                android:textSize="20sp"
                android:layout_alignParentStart="true"
                android:textColor="#464646"
                android:layout_marginStart="10dp"/>

            <ImageView
                android:id="@+id/iv_arrow_day"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="3dp"
                android:src="@drawable/ic_action_name"/>

            <TextView
                android:id="@+id/tv_label_unit_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/iv_arrow_day"
                android:layout_marginEnd="15dp"
                android:text=" L"
                android:textSize="20sp"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:id="@+id/tv_conso_jour_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-1"
                android:textSize="20sp"
                android:layout_marginTop="2dp"
                android:layout_toStartOf="@id/tv_label_unit_day"
                android:textColor="#0E97EC"
                android:textStyle="normal|bold" />

        </RelativeLayout>

        <View
            android:layout_width="260dp"
            android:layout_height="2px"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#000000"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/tv_semaine_conso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/conso_hebdo"
                android:textSize="19sp"
                android:layout_alignParentStart="true"
                android:textColor="#464646"
                android:layout_marginStart="10dp"/>


            <ImageView
                android:id="@+id/iv_arrow_week"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="3dp"
                android:src="@drawable/ic_action_name"/>

            <TextView
                android:id="@+id/tv_label_unit_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/iv_arrow_week"
                android:layout_marginEnd="15dp"
                android:text=" L"
                android:textSize="20sp"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:id="@+id/tv_conso_hebdo_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-1"
                android:textSize="20sp"
                android:layout_marginTop="2dp"
                android:layout_toStartOf="@id/tv_label_unit_week"
                android:textColor="#0E97EC"
                android:textStyle="normal|bold" />

        </RelativeLayout>

        <View
            android:layout_width="260dp"
            android:layout_height="2px"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#000000"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/tv_mois_conso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_alignParentStart="true"
                android:textColor="#464646"
                android:layout_marginStart="10dp"/>


            <ImageView
                android:id="@+id/iv_arrow_month"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="3dp"
                android:src="@drawable/ic_arrow_up"/>

            <TextView
                android:id="@+id/tv_label_unit_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/iv_arrow_month"
                android:layout_marginEnd="15dp"
                android:text=" L"
                android:textSize="20sp"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:id="@+id/tv_conso_mois_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-1"
                android:layout_marginTop="2dp"
                android:textSize="20sp"
                android:layout_toStartOf="@id/tv_label_unit_month"
                android:textColor="#0E97EC"
                android:textStyle="normal|bold" />

        </RelativeLayout>

        <View
            android:layout_width="260dp"
            android:layout_height="2px"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#000000"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tv_annee_conso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_alignParentStart="true"
                android:textColor="#464646"
                android:layout_marginStart="10dp"/>


            <ImageView
                android:id="@+id/iv_arrow_year"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="3dp"
                android:src="@drawable/ic_action_name"/>

            <TextView
                android:id="@+id/tv_label_unit_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/iv_arrow_year"
                android:layout_marginRight="15dp"
                android:text=" L"
                android:textSize="20sp"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:id="@+id/tv_conso_annee_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-1"
                android:textSize="20sp"
                android:layout_toStartOf="@id/tv_label_unit_year"
                android:layout_marginTop="2dp"
                android:textColor="#0E97EC"
                android:textStyle="normal|bold" />

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
